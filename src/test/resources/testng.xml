<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="DLAD CRM Automation Test Suite">

    <listeners>
        <listener class-name="com.dlad.qa.listeners.DLADCRMListeners" />
    </listeners>

    <test thread-count="5" name="ChromeTest">
        <parameter name="browser" value="chrome" />
        <classes>
       		<class name="com.dlad.qa.testcases.LoginTest" />
            <class name="com.dlad.qa.testcases.CRMBrokenLinksTest" />
            <class name="com.dlad.qa.testcases.HomeTest" />
            <class name="com.dlad.qa.testcases.LeadListTest" />
        </classes>
    </test> <!-- Test -->

    <test thread-count="5" name="EdgeTest">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="com.dlad.qa.testcases.LoginTest" />
            <class name="com.dlad.qa.testcases.CRMBrokenLinksTest" />
            <class name="com.dlad.qa.testcases.HomeTest" />
            <class name="com.dlad.qa.testcases.LeadListTest" />
        </classes>
    </test> <!-- Test -->

    <test thread-count="5" name="FirefoxTest">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.dlad.qa.testcases.LoginTest" />
            <class name="com.dlad.qa.testcases.CRMBrokenLinksTest" />
            <class name="com.dlad.qa.testcases.HomeTest" />
            <class name="com.dlad.qa.testcases.LeadListTest" />
        </classes>
    </test> <!-- Test -->

</suite> <!-- Suite -->
